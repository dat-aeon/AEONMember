<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_medium_3"
        android:background="@color/grayLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/margin_medium">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_small_2x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:scaleType="fitXY"
                    android:id="@+id/animate_img2"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_medium"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="256dp"
                            android:layout_height="256dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="@dimen/margin_large">

                            <mm.com.aeon.vcsaeon.views.customviews.SendMessageImageView
                                android:id="@+id/mem_card_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_heading_1x"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:id="@+id/text_member_no"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:fontFamily="@font/pyidaungsu_bold"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/card_two_text"
                            android:layout_margin="@dimen/margin_medium"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_regular_3x"
                            android:fontFamily="@font/pyidaungsu_bold"
                            android:text="@string/membership_card2_photo_label"/>

                    </LinearLayout>

                </FrameLayout>

            </ScrollView>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>