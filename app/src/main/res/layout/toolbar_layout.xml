<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small_2x"
        android:paddingBottom="@dimen/margin_small_2x">

        <LinearLayout
            android:id="@+id/menu_back_btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_small_2x">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_32" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/aeon_logo_side_small"
            android:layout_height="@dimen/aeon_logo_side_small"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_toRightOf="@id/menu_back_btn_view"
            android:src="@drawable/aeon_logo_white" />

        <TextView
            android:id="@+id/menu_bar_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/flag_layout"
            android:layout_toRightOf="@id/logo"
            android:fontFamily="@font/pyidaungsu_regular"
            android:text="Lv.1 : Application User"
            android:textColor="@color/colorPrimary"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/menu_bar_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_bar_level"
            android:layout_toLeftOf="@id/flag_layout"
            android:layout_toRightOf="@id/logo"
            android:fontFamily="@font/pyidaungsu_regular"
            android:text="09xxxxxxxx"
            android:textColor="@color/colorPrimary"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/menu_bar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_bar_phone"
            android:layout_toRightOf="@id/logo"
            android:fontFamily="@font/pyidaungsu_regular"
            android:justificationMode="inter_word"
            android:text="KHIN YADANAR THEIN KHIN YADANAR "
            android:textColor="@color/colorPrimary"
            android:textSize="7pt" />

        <RelativeLayout
            android:id="@+id/flag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_medium">

            <LinearLayout
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="horizontal">

                <mm.com.aeon.vcsaeon.views.customviews.LanguageFlagIV
                    android:id="@+id/my_flag"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:elevation="@dimen/margin_tiny"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mm_flag"
                    android:tag="my" />

                <mm.com.aeon.vcsaeon.views.customviews.LanguageFlagIV
                    android:id="@+id/en_flag"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:elevation="@dimen/margin_tiny"
                    android:scaleType="centerCrop"
                    android:src="@drawable/en_flag2"
                    android:tag="en" />
            </LinearLayout>

            <TextView
                android:id="@+id/menu_bar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flag"
                android:layout_margin="@dimen/margin_tiny"
                android:fontFamily="@font/pyidaungsu_regular"
                android:paddingTop="10dp"
                android:text="2020-01-15"
                android:textColor="@color/colorPrimary"
                android:textSize="7pt"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>