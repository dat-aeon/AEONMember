<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:elevation="@dimen/margin_tiny"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grid_layout_border"
    android:backgroundTint="@color/share_color"
    android:padding="5dp">

    <!--<ImageView
        android:layout_height="@dimen/category_ic_side"
        android:id="@+id/imageView1"
        android:layout_width="@dimen/category_ic_side"
        android:src="@drawable/share_icon_white_512"
        android:layout_marginTop="5dp"
        android:padding="@dimen/margin_tiny"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>-->

    <ImageView
        android:layout_height="@dimen/category_ic_side"
        android:id="@+id/imageView1"
        android:layout_width="@dimen/category_ic_side"
        android:src="@drawable/gd_ic_share"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/grayLight"
        android:background="@drawable/messaging_container_frame"
        android:padding="@dimen/margin_small_2x"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/main_share_title"
        android:layout_height="wrap_content"
        android:id="@+id/text_share"
        android:layout_width="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/main_view_font_size"
        android:fontFamily="@font/vcsm_labels_font"
        android:textColor="@color/white"
        android:ellipsize="marquee"/>

</RelativeLayout>