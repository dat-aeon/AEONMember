<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/loc_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/find_us_color"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/share_view"
        app:tabIndicatorHeight="@dimen/margin_tiny"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/CustomTextAppearanceTab"
        app:tabTextColor="@color/dark_blue"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/loc_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>