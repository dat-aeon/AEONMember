<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/service_unavailable_about_us"
        layout="@layout/service_unavailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium_2"
            android:visibility="gone">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="@font/pyidaungsu_bold"
                android:paddingLeft="@dimen/margin_medium_x"
                android:text="@string/aboutus_content_title"
                android:textColor="@color/our_service_color"
                android:textSize="@dimen/text_regular_2x" />

            <TextView
                android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="@font/pyidaungsu_regular"
                android:lineSpacingExtra="@dimen/margin_tiny"
                android:padding="@dimen/margin_medium_x"
                android:textColor="@color/black"
                android:textSize="@dimen/text_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:background="@color/our_service_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/ic_regular_2x"
                    android:layout_height="@dimen/ic_regular_2x"
                    android:layout_gravity="center_vertical|left"
                    android:padding="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_local_phone_black_24dp" />

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:text="0996971222"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular" />

                <Button
                    android:id="@+id/btn_about_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_weight="0.1"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/our_service_color"
                    android:drawableLeft="@drawable/ic_baseline_call_24"
                    android:fontFamily="@font/pyidaungsu_bold"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_medium_x"
                    android:text="@string/aboutus_all_now_button"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:background="@color/our_service_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_regular_2x"
                    android:layout_height="@dimen/ic_regular_2x"
                    android:layout_gravity="top"
                    android:padding="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_medium_x"
                    android:paddingRight="@dimen/margin_medium_x"
                    android:scaleType="centerCrop"
                    android:src="@drawable/facebook_blue_128" />

                <TextView
                    android:id="@+id/aeon_fb_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:autoLink="web"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:lineSpacingExtra="-8dp"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:text="No webpage available."
                    android:textColorLink="@color/color_url_link"
                    android:textSize="@dimen/text_regular"
                    android:typeface="serif" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:background="@color/our_service_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_regular_2x"
                    android:layout_height="@dimen/ic_regular_2x"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_small_2x"
                    android:paddingRight="@dimen/margin_medium_x"
                    android:scaleType="centerCrop"
                    android:src="@drawable/www_logo" />

                <TextView
                    android:id="@+id/aeon_web_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:autoLink="web"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:lineSpacingExtra="-8dp"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:text="No webpage available."
                    android:textColorLink="@color/color_url_link"
                    android:textSize="@dimen/text_regular"
                    android:typeface="serif" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:background="@color/our_service_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_x"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium_x"
                android:layout_marginBottom="@dimen/margin_medium_x"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_regular_2x"
                    android:layout_height="@dimen/ic_regular_2x"
                    android:layout_gravity="top"
                    android:padding="@dimen/margin_small_2x"
                    android:paddingRight="@dimen/margin_medium_x"
                    android:scaleType="centerCrop"
                    android:src="@drawable/about_address" />

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:lineSpacingExtra="@dimen/margin_tiny"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>