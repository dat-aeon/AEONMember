<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_large"
    android:paddingTop="@dimen/margin_medium_2"
    android:paddingRight="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_large"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="@dimen/margin_medium">

        <ImageView
            android:id="@+id/close_ask_product"
            android:layout_width="@dimen/ic_regular_2x"
            android:layout_height="@dimen/ic_regular_2x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_baseline_close_24_primary" />

        <TextView
            android:id="@+id/lblAskProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:text="@string/welcome_agent_channel_title"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold" />

        <!--<ImageView
            android:id="@+id/imgAskProd"
            android:layout_width="@dimen/ic_regular_2x"
            android:layout_height="@dimen/ic_regular_2x"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_small"
            android:backgroundTint="@color/grayLight"
            android:background="@drawable/messaging_container_frame"
            android:src="@drawable/gd_ic_ask_product" />-->

    </RelativeLayout>

    <!--<View
        android:id="@+id/divider00"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_small_2x"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/gray" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <TextView
            android:id="@+id/lbl_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Category : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular" />

        <Spinner
            android:id="@+id/txt_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_below="@+id/lbl_category"
            android:layout_marginRight="@dimen/margin_tiny"
            android:background="@drawable/edit_text_style"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <TextView
            android:id="@+id/lbl_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Brand : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular" />

        <Spinner
            android:id="@+id/txt_brand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_below="@+id/lbl_brand"
            android:layout_marginRight="@dimen/margin_tiny"
            android:background="@drawable/edit_text_style"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <TextView
            android:id="@+id/lbl_additional_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Additional Text : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/err_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_additional_text"
            android:fontFamily="@font/pyidaungsu_regular"
            android:text="@string/register_name_err"
            android:textColor="@color/red"
            android:textSize="@dimen/text_regular"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/err_add_text"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:errorEnabled="true"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_additional_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/edit_text_style"
                android:fontFamily="@font/input_text_font"
                android:gravity="top|left"
                android:maxLength="100"
                android:maxLines="3"
                android:padding="@dimen/margin_medium"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="@color/grayLight"
                android:textSize="@dimen/text_regular" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Place : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/err_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_location"
            android:fontFamily="@font/pyidaungsu_regular"
            android:text="@string/register_name_err"
            android:textColor="@color/red"
            android:textSize="@dimen/text_regular"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/err_location"
            app:errorEnabled="true"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:fontFamily="@font/input_text_font"
                android:gravity="top|left"
                android:maxLength="256"
                android:padding="@dimen/margin_medium"
                android:textColor="@color/black"
                android:textColorHint="@color/grayLight"
                android:textSize="@dimen/text_regular" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:gravity="center"
        android:maxHeight="50dp"
        android:minHeight="48dp">

        <Button
            android:id="@+id/btn_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/button_border"
            android:clickable="true"
            android:elevation="0dp"
            android:gravity="center"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular" />
    </RelativeLayout>

</LinearLayout>