<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:elevation="@dimen/margin_tiny"
    android:background="@drawable/grid_layout_border"
    android:backgroundTint="@color/loan_application_color"
    android:gravity="left|center_vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/menu_status_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/status_change_count"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_tiny"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/category_ic_side"
        android:layout_height="@dimen/category_ic_side"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/loan_icon_green_512"></ImageView>

    <TextView
        android:id="@+id/text_loan_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="marquee"
        android:lineSpacingExtra="-4dp"
        android:fontFamily="@font/pyidaungsu_regular"
        android:text="@string/welcome_loan_app_title"
        android:textColor="@color/white"
        android:textSize="@dimen/main_view_font_size" />

</RelativeLayout>