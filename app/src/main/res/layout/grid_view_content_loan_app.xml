<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left|center_vertical"
    android:background="@drawable/grid_layout_border"
    android:backgroundTint="@color/loan_application_color"
    android:padding="5dp">
    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:id="@+id/menu_status_count"
        android:background="@drawable/status_change_count"
        android:layout_alignParentEnd="true"
        android:text="1"/>
    <ImageView
        android:layout_height="50dp"
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:src="@drawable/loan_icon_green_512"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp">
    </ImageView>

    <TextView
        android:text="@string/welcome_loan_app_title"
        android:layout_height="wrap_content"
        android:id="@+id/text_loan_app"
        android:layout_width="wrap_content"
        android:textSize="@dimen/main_view_font_size"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1"
        android:fontFamily="@font/pyidaungsu_regular"
        android:textColor="@color/white"
        android:ellipsize="marquee"/>

</RelativeLayout>