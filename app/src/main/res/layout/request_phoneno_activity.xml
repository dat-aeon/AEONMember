<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <TextView
            android:id="@+id/request_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pyidaungsu_bold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-4dp"
            android:text="@string/phone_request_text"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/text_phone_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_large"
            android:height="@dimen/edit_text_height"
            android:background="@drawable/edit_text_style"
            android:fontFamily="@font/input_text_font"
            android:hint="@string/register_phoneno_holder"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/margin_medium"
            android:textColor="@color/black"
            android:textColorHint="@color/grayLight"
            android:textSize="@dimen/text_regular" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.0"
            android:background="@drawable/button_border"
            android:fontFamily="@font/pyidaungsu_bold"
            android:text="@string/btn_next"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>