<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/button_border"
    android:backgroundTint="@color/ask_product_color"
    android:elevation="@dimen/margin_tiny"
    android:gravity="center"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/layout_logo"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <!--<ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/category_ic_side"
            android:layout_height="@dimen/category_ic_side"
            android:layout_centerInParent="true"
            android:src="@drawable/otology_512"></ImageView>-->

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/category_ic_side"
            android:layout_height="@dimen/category_ic_side"
            android:layout_centerInParent="true"
            android:background="@drawable/messaging_container_frame"
            android:backgroundTint="@color/grayLight"
            android:padding="@dimen/margin_small_2x"
            android:src="@drawable/gd_ic_ask_product" />

        <TextView
            android:id="@+id/lblAskProdMessageCount"
            android:layout_width="@dimen/margin_medium_3"
            android:layout_height="@dimen/margin_medium_3"
            android:layout_alignParentRight="true"
            android:background="@drawable/status_change_count"
            android:fontFamily="@font/pyidaungsu_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_smaller"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_find_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_tiny"
        android:ellipsize="marquee"
        android:fontFamily="@font/vcsm_labels_font"
        android:text="@string/welcome_agent_channel_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small" />

</RelativeLayout>