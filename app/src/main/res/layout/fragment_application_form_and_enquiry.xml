<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:backgroundTint="#CCFFFFFF"
    android:background="@drawable/button_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ic_regular_2x"
            android:layout_height="@dimen/ic_regular_2x"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_apply"/>

        <Button
            android:id="@+id/btn_app_form"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/line_button_border"
            android:text="@string/da_application_form_button"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textColor="@color/da_button__color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ic_regular_2x"
            android:layout_height="@dimen/ic_regular_2x"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_application_check"/>

        <Button
            android:id="@+id/btn_app_enquiry"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/line_button_border"
            android:textSize="16dp"
            android:text="@string/da_application_enquiry_button"
            android:textColor="@color/da_button__color"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>