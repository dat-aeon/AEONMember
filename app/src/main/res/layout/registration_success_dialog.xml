<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_gravity="center"
    android:background="@drawable/alert_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large_2"
    android:layout_marginRight="@dimen/margin_large_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_info_black_24dp_n"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_title"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/margin_small"
            android:textSize="@dimen/text_regular"
            android:fontFamily="@font/pyidaungsu_regular"
            android:layout_gravity="center_vertical"
            android:text="@string/dialog_title_info"/>

    </LinearLayout>

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_medium_x"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_message1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_2x"
        android:padding="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center"
        android:text="text here"
        android:fontFamily="@font/pyidaungsu_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_large"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/mini_button_height"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/text_medium"
            android:width="120dp"
            android:id="@+id/rbtn_ok"
            android:layout_gravity="right"
            android:fontFamily="@font/pyidaungsu_regular"
            android:background="@drawable/button_border"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:textColor="@color/white"
            android:text="OK"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large">

            <ImageView
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:id="@+id/img_alert"
                android:layout_marginRight="@dimen/margin_small"
                android:src="@drawable/ic_warning_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_alert"
                android:id="@+id/text_message2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_regular_2x"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_large"
                android:text="text here"
                android:fontFamily="@font/pyidaungsu_regular"/>

        </RelativeLayout>

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/rbtn_callNow"
            android:padding="@dimen/margin_medium"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_large"
            android:fontFamily="@font/pyidaungsu_bold"
            android:drawableLeft="@drawable/call_now"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/button_border"
            android:text="@string/verify_callnow_button"/>

    </LinearLayout>

</LinearLayout>