<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_outlet_back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outletName"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:fontFamily="@font/pyidaungsu_bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Outlet Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/outletAddress"
            android:textSize="@dimen/text_regular"
            android:fontFamily="@font/pyidaungsu_regular"
            android:textColor="@color/colorPrimaryDark"
            android:text="Address Address Address"/>

    </LinearLayout>

    <mm.com.aeon.vcsaeon.views.customviews.SendMessageImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="1dp"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/outlet_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_outlet_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:src="@drawable/call_now_color" />

            <TextView
                android:id="@+id/text_outlet_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="@font/pyidaungsu_regular"
                android:text="Call Now"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/text_telephone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:fontFamily="@font/pyidaungsu_regular"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_map_nav"
                android:src="@drawable/ic_near_me_black_24dp_detail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_map_navigation"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="@font/pyidaungsu_regular"
                android:textColor="@color/colorPrimaryDark"
                android:text="Map Navigation"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
