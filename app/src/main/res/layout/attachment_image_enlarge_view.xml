<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/alert_dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium">

        <TextView
            android:id="@+id/lbl_attach_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:fontFamily="@font/pyidaungsu_bold"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium" />

        <mm.com.aeon.vcsaeon.views.customviews.SendMessageImageView
            android:id="@+id/img_attach_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_attach_image_title"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/margin_medium"
            android:scaleType="fitCenter"
            android:src="@drawable/noimage" />

        <ImageView
            android:id="@+id/da_img_preview_close"
            android:layout_width="@dimen/ic_regular"
            android:layout_height="@dimen/ic_regular"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_close"
            app:backgroundTint="@color/white"
            app:elevation="@dimen/cv_elevation"
            app:fabSize="mini" />

    </RelativeLayout>

</LinearLayout>