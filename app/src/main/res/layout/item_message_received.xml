<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/img_admin"
        android:layout_width="@dimen/ic_messaging_height"
        android:layout_height="@dimen/ic_messaging_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:gravity="center"
        android:padding="@dimen/margin_tiny"
        android:scaleType="centerCrop"
        android:src="@drawable/aeon_logo_white"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_toEndOf="@+id/img_admin"
        android:background="@drawable/messaging_container_frame"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/pyidaungsu_regular"
        android:gravity="center_vertical"
        android:lineSpacingExtra="-2dp"
        android:maxWidth="250dp"
        android:minWidth="0dp"
        android:minHeight="@dimen/edit_text_height"
        android:paddingLeft="@dimen/margin_medium_2"
        android:paddingTop="@dimen/margin_medium_x"
        android:paddingRight="@dimen/margin_medium_2"
        android:paddingBottom="@dimen/margin_medium"
        android:text="A quick brown fox jumps over the lazy dog."
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_message_body"
        android:layout_marginLeft="@dimen/margin_medium_3"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toEndOf="@+id/img_admin"
        android:fontFamily="@font/vcsm_chat_msg_font"
        android:text="10/10/2018 10:00 PM"
        android:textAllCaps="true"
        android:textSize="@dimen/text_smaller" />

</RelativeLayout>