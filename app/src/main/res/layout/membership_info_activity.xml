<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_medium"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        card_view:cardCornerRadius="@dimen/margin_medium">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium_2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pro_pic_cv"
                    android:layout_width="@dimen/member_photo"
                    android:layout_height="@dimen/member_photo"
                    android:layout_marginBottom="@dimen/margin_small_2x"
                    android:padding="@dimen/margin_small"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="@dimen/margin_medium_3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/member_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aeon_logo_white" />

                        <ImageView
                            android:id="@+id/ic_edit_bg"
                            android:layout_width="@dimen/ic_regular_2x"
                            android:layout_height="@dimen/ic_regular_2x"
                            android:background="@drawable/message_sent_text_style"
                            android:src="@drawable/ic_baseline_camera_alt_24"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/margin_small"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:visibility="visible" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_customer_id"
                        android:layout_width="@dimen/member_card_info_width"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pyidaungsu_bold"
                        android:paddingLeft="@dimen/margin_medium_x"
                        android:text="Customer No. :"
                        android:textColor="@color/membership_color"
                        android:textSize="@dimen/text_regular_2x" />

                    <TextView
                        android:id="@+id/lbl_customer_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pyidaungsu_bold"
                        android:paddingLeft="@dimen/margin_medium_x"
                        android:text="2019012354"
                        android:textColor="@color/membership_color"
                        android:textSize="@dimen/text_regular_2x"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_member_id"
                        android:layout_width="@dimen/member_card_info_width"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pyidaungsu_bold"
                        android:paddingLeft="@dimen/margin_medium_x"
                        android:text="Member ID     :"
                        android:textColor="@color/membership_color"
                        android:textSize="@dimen/text_regular_2x" />

                    <TextView
                        android:id="@+id/lbl_member_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pyidaungsu_bold"
                        android:paddingLeft="@dimen/margin_medium_x"
                        android:text="2019012354"
                        android:textColor="@color/membership_color"
                        android:textSize="@dimen/text_regular_2x"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/horizontal_line_height"
                    android:layout_marginLeft="@dimen/margin_medium_x"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_x"
                    android:background="@color/membership_color" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_card_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small_2x" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>