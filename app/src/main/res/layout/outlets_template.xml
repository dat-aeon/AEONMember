<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_small"
    android:elevation="0dp"
    android:padding="@dimen/margin_small"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_small">

            <ImageView
                android:id="@+id/img_navigation"
                android:layout_width="@dimen/ic_regular_2x"
                android:layout_height="@dimen/ic_regular_2x"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/outlet_list_logo_bg"
                android:padding="@dimen/margin_tiny"
                android:src="@drawable/ic_location_on_black_24dp" />

            <LinearLayout
                android:id="@+id/layout_name_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="92dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_toRightOf="@+id/img_navigation"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/outlet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/pyidaungsu_bold"
                    android:singleLine="true"
                    android:text="Outlet Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/outlet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:singleLine="true"
                    android:text="Outlet Address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/outlet_distance"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toLeftOf="@+id/img_detail"
                android:background="@drawable/edit_text_style"
                android:fontFamily="@font/pyidaungsu_regular"
                android:gravity="center"
                android:text="0.0 m"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="@dimen/ic_regular"
                android:layout_height="@dimen/ic_regular"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

        </RelativeLayout>

        <View
            android:id="@+id/divider15"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/layout_name_loc"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/gray" />

    </LinearLayout>

