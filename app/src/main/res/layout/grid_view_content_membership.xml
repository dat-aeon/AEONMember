<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_border"
    android:backgroundTint="@color/membership_color"
    android:elevation="@dimen/margin_tiny">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--<ImageView
            android:id="@+id/memeber_image"
            android:layout_width="@dimen/category_ic_side"
            android:layout_height="@dimen/category_ic_side"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/member_round_icon" />-->

        <ImageView
            android:id="@+id/memeber_image"
            android:layout_width="@dimen/category_ic_side"
            android:layout_height="@dimen/category_ic_side"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small_2x"
            android:backgroundTint="@color/grayLight"
            android:background="@drawable/messaging_container_frame"
            android:src="@drawable/gd_ic_member" />

        <TextView
            android:id="@+id/text_memebership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memeber_image"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:fontFamily="@font/vcsm_labels_font"
            android:text="@string/welcome_membership_title"
            android:textColor="@color/white"
            android:textSize="@dimen/main_view_font_size" />

    </LinearLayout>

</RelativeLayout>

