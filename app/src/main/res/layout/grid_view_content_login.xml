<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grid_layout_border"
    android:backgroundTint="@color/login_color"
    android:elevation="@dimen/margin_tiny"
    android:gravity="center"
    android:padding="@dimen/margin_small">

    <LinearLayout
        android:id="@+id/layoutLoginIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_login"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/finger"
            android:layout_width="@dimen/category_ic_side"
            android:layout_height="@dimen/category_ic_side"
            android:layout_margin="@dimen/margin_tiny"
            android:background="@drawable/messaging_container_frame"
            android:backgroundTint="@color/grayLight"
            android:padding="@dimen/margin_small_2x"
            android:src="@drawable/gd_ic_login_fp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/face_id"
            android:layout_width="@dimen/category_ic_side"
            android:layout_height="@dimen/category_ic_side"
            android:layout_margin="@dimen/margin_tiny"
            android:background="@drawable/messaging_container_frame"
            android:backgroundTint="@color/grayLight"
            android:padding="@dimen/margin_small_2x"
            android:src="@drawable/gd_ic_login_face"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small_2x"
        android:ellipsize="end"
        android:fontFamily="@font/vcsm_labels_font"
        android:gravity="center"
        android:text="@string/home_login_button"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_2x" />


