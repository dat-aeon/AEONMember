<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grid_layout_border"
    android:backgroundTint="@color/login_color"
    android:padding="5dp">


    <TextView
        android:text="@string/home_login_button"
        android:layout_height="wrap_content"
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        android:fontFamily="@font/pyidaungsu_regular"
        android:textColor="@color/white"
        android:ellipsize="marquee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_login"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:gravity="center">

        <ImageView
            android:layout_height="30dp"
            android:id="@+id/finger"
            android:layout_width="30dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/finger_icon_512">
        </ImageView>

        <ImageView
            android:layout_height="30dp"
            android:id="@+id/face_id"
            android:layout_width="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/margin_medium_x"
            android:src="@drawable/face_id_white_512"/>
    </LinearLayout>

