                            android:weightSum="1.0">

                            <TextView
                                android:id="@+id/emer_txt_street"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/pyidaungsu_bold"
                                android:gravity="center_vertical"
                                android:text="@string/da_applicant_street"
                                android:textColor="@color/da_label_color"
                                android:textSize="@dimen/text_regular"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/emer_street"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_weight="0.5"
                                android:background="@drawable/mandatroy_edit_text_style"
                                android:fontFamily="@font/input_text_font"
                                android:hint=""
                                android:maxLength="100"
                                android:paddingLeft="@dimen/margin_medium"
                                android:singleLine="true"
                                android:textColor="@color/da_value_color"
                                android:textColorHint="@color/grayLight"
                                android:textSize="@dimen/text_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emergency_err_quarter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:fontFamily="@font/pyidaungsu_regular"
                            android:text="@string/da_err_street"
                            android:textColor="@color/da_err_msg_color"
                            android:textSize="@dimen/text_regular"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:weightSum="1.0">

                            <TextView
                                android:id="@+id/emer_txt_quarter"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/pyidaungsu_bold"
                                android:gravity="center_vertical"
                                android:text="@string/da_applicant_quarter"
                                android:textColor="@color/da_label_color"
                                android:textSize="@dimen/text_regular"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/emer_quarter"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_weight="0.5"
                                android:background="@drawable/mandatroy_edit_text_style"
                                android:fontFamily="@font/input_text_font"
                                android:hint=""
                                android:maxLength="100"
                                android:paddingLeft="@dimen/margin_medium"
                                android:singleLine="true"
                                android:textColor="@color/da_value_color"
                                android:textColorHint="@color/grayLight"
                                android:textSize="@dimen/text_regular" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
