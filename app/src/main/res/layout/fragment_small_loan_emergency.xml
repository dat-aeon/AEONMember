                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_style"
                            android:fontFamily="@font/input_text_font"
                            android:hint=""
                            android:maxLength="20"
                            android:paddingLeft="@dimen/margin_medium"
                            android:singleLine="true"
                            android:textColor="@color/da_value_color"
                            android:textColorHint="@color/grayLight"
                            android:textSize="@dimen/text_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/emer_txt_room_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/pyidaungsu_bold"
                            android:gravity="center_vertical"
                            android:text="@string/da_applicant_room_no"
                            android:textColor="@color/da_label_color"
                            android:textSize="@dimen/text_regular"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/emer_room_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_style"
                            android:fontFamily="@font/input_text_font"
                            android:hint=""
                            android:maxLength="20"
                            android:paddingLeft="@dimen/margin_medium"
                            android:singleLine="true"
                            android:textColor="@color/da_value_color"
                            android:textColorHint="@color/grayLight"
                            android:textSize="@dimen/text_regular" />

                    </LinearLayout>

                    <LinearLayout
