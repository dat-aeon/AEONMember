                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_style"
                            android:fontFamily="@font/input_text_font"
                            android:hint=""
                            android:maxLength="20"
                            android:paddingLeft="@dimen/margin_medium"
                            android:singleLine="true"
                            android:textColor="@color/da_value_color"
                            android:textColorHint="@color/grayLight"
                            android:textSize="@dimen/text_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emergency_err_street"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:fontFamily="@font/pyidaungsu_regular"
                            android:text="@string/da_err_street"
                            android:textColor="@color/da_err_msg_color"
                            android:textSize="@dimen/text_regular"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_medium"
