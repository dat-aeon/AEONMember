<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/stepview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/edit_text_style"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium"
            android:visibility="gone">

            <io.canner.stepsview.StepsView xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/stepsView_3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                custom:circleRadius="20"
                custom:labelSize="10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emer_data_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/emer_stepped_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                app:spb_animateToCurrentProgressState="true"
                app:spb_checkStateCompleted="false"
                app:spb_currentStateDescriptionColor="@color/da_button__color"
                app:spb_currentStateNumber="three"
                app:spb_descriptionTopSpaceIncrementer="@dimen/margin_tiny"
                app:spb_maxStateNumber="five"
                app:spb_stateBackgroundColor="@color/color_disable"
                app:spb_stateDescriptionColor="@color/color_disable"
                app:spb_stateDescriptionSize="@dimen/text_small"
                app:spb_stateForegroundColor="@color/da_button__color"
                app:spb_stateNumberBackgroundColor="@color/white"
                app:spb_stateNumberForegroundColor="@color/white" />

            <!--<TextView
                android:id="@+id/da_emer_data_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/pyidaungsu_bold"
                android:gravity="center"
                android:text="@string/da_emergency_title"
                android:textColor="@color/da_label_color"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold" />-->

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/emergency_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_layout"
            android:layout_below="@id/emer_data_banner"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:background="@null"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emer_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:fontFamily="@font/pyidaungsu_bold"
                        android:text="@string/register_name_label"
                        android:textColor="@color/da_label_color"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/emergency_err_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:fontFamily="@font/pyidaungsu_regular"
                        android:text="Name is required."
                        android:textColor="@color/da_err_msg_color"
                        android:textSize="@dimen/text_regular"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/emergency_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:background="@drawable/mandatroy_edit_text_style"
                        android:fontFamily="@font/input_text_font"
                        android:hint="@string/register_name_holder"
                        android:inputType="textCapCharacters"
                        android:maxLength="256"
                        android:paddingLeft="@dimen/margin_medium"
                        android:singleLine="true"
                        android:textColor="@color/da_value_color"
                        android:textColorHint="@color/grayLight"
                        android:textSize="@dimen/text_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emer_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:fontFamily="@font/pyidaungsu_bold"
                        android:text="Relationship with Applicant*"
                        android:textColor="@color/da_label_color"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_relationship"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginRight="@dimen/margin_tiny"
                        android:layout_weight="0.1"
