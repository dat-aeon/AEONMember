                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:fontFamily="@font/pyidaungsu_regular"
                            android:text="@string/da_err_street"
                            android:textColor="@color/da_err_msg_color"
                            android:textSize="@dimen/text_regular"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:weightSum="1.0">

                            <TextView
                                android:id="@+id/emer_txt_city"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/pyidaungsu_bold"
                                android:gravity="center_vertical"
                                android:text="@string/da_applicant_city"
                                android:textColor="@color/da_label_color"
                                android:textSize="@dimen/text_regular"
                                android:textStyle="bold" />

                            <AutoCompleteTextView
                                android:id="@+id/emer_city"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_marginRight="@dimen/margin_tiny"
                                android:layout_weight="0.5"
                                android:background="@drawable/mandatroy_edit_text_style"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/pyidaungsu_regular"
                                android:gravity="center"
                                android:longClickable="false"
                                android:maxLength="100"
                                android:paddingLeft="@dimen/margin_medium_2"
                                android:paddingRight="@dimen/margin_medium_2"
                                android:singleLine="true"
                                android:textAlignment="center"
                                android:textColor="@color/da_value_color"
                                android:textSize="@dimen/text_regular" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emergency_err_township"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:fontFamily="@font/pyidaungsu_regular"
                            android:text="@string/da_err_street"
                            android:textColor="@color/da_err_msg_color"
                            android:textSize="@dimen/text_regular"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:weightSum="1.0">

                            <TextView
                                android:id="@+id/emer_txt_township"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/pyidaungsu_bold"
                                android:gravity="center_vertical"
                                android:text="@string/da_applicant_township"
                                android:textColor="@color/da_label_color"
                                android:textSize="@dimen/text_regular"
                                android:textStyle="bold" />

                            <AutoCompleteTextView
                                android:id="@+id/emer_township"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_marginRight="@dimen/margin_tiny"
                                android:layout_weight="0.5"
                                android:background="@drawable/mandatroy_edit_text_style"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/pyidaungsu_regular"
                                android:gravity="center"
                                android:longClickable="false"
                                android:maxLength="100"
