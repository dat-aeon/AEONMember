<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="220dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="@dimen/margin_small">

        <LinearLayout
            android:id="@+id/l_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/coupon_template"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/l_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_weight="0.1"
                android:background="@color/red">

                <TextView
                    android:id="@+id/text_special_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pyidaungsu_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_small"
                    android:text="Special Events : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_smaller"
                    android:textStyle="bold"
                    android:typeface="monospace" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_weight="0.8"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/layout_middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1">

                        <ImageView
                            android:id="@+id/img_coupon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_small">

                        <TextView
                            android:id="@+id/coupon_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pyidaungsu_bold"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="-4dp"
                            android:padding="@dimen/margin_tiny"
                            android:text="Fried Chicken 1 pic promo."
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_regular"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/l_1_2_1_1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_tiny">

                            <TextView
                                android:id="@+id/txt_goods_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif-black"
                                android:includeFontPadding="false"
                                android:text="16000"
                                android:textColor="@color/yellow"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_goods_price_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="mmk"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/text_regular_2x"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/lbl_end_of_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pyidaungsu_regular"
                                    android:gravity="center_vertical|right"
                                    android:includeFontPadding="false"
                                    android:paddingRight="@dimen/margin_medium"
                                    android:text="End of"
                                    android:textColor="@color/color_disable"
                                    android:textSize="@dimen/text_small" />

                                <TextView
                                    android:id="@+id/expired_date_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pyidaungsu_bold"
                                    android:gravity="center_vertical|right"
                                    android:includeFontPadding="false"
                                    android:paddingRight="@dimen/margin_medium"
                                    android:text="26-03-2019"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/text_regular"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/margin_tiny">

                                    <TextView
                                        android:id="@+id/coupon_amt_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="sans-serif-black"
                                        android:gravity="center_vertical"
                                        android:includeFontPadding="false"
                                        android:text="99999"
                                        android:textColor="@color/yellow"
                                        android:textSize="@dimen/text_heading_2x"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/coupon_amt_unit_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/margin_tiny"
                                        android:fontFamily="sans-serif-black"
                                        android:gravity="center_vertical"
                                        android:lineSpacingExtra="-8dp"
                                        android:text="mmk"
                                        android:textColor="@color/yellow"
                                        android:textSize="@dimen/text_regular_2x"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/coupon_amt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pyidaungsu_bold"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:paddingLeft="0dp"
                                android:text="10"
                                android:textColor="@color/yellow"
                                android:textSize="100dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/lbl_end_of_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pyidaungsu_regular"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="@dimen/margin_medium"
                                    android:text="End of"
                                    android:textColor="@color/red"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/expired_date_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pyidaungsu_bold"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="@dimen/margin_medium"
                                    android:text="26-03-2019"
                                    android:textColor="@color/red"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/coupon_amt_unit_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/margin_tiny"
                                    android:fontFamily="@font/pyidaungsu_bold"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingBottom="@dimen/margin_small"
                                    android:text="mmk"
                                    android:textColor="@color/yellow"
                                    android:textSize="24dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/used_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/l_1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_weight="0.1"
                android:background="@color/red">

                <TextView
                    android:id="@+id/text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pyidaungsu_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_small"
                    android:text="Note: "
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>