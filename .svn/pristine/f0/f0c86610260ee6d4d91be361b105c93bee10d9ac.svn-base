<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/alert_dialog_bg"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin_large_2"
    android:layout_marginRight="@dimen/margin_large_2"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warn_message"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_2x"
        android:padding="@dimen/text_medium"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:gravity="center_horizontal"
        android:fontFamily="@font/pyidaungsu_regular"
        android:text="Only member can edit profile picture."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_medium"
        android:layout_marginBottom="@dimen/margin_large"
        android:textSize="@dimen/text_regular_3x"
        android:width="120dp"
        android:id="@+id/button_ok"
        android:fontFamily="@font/pyidaungsu_regular"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/button_border"
        android:textColor="@color/white"
        android:text="OK"/>

</LinearLayout>