<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!--<androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_bio_reg"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/margin_small"
        android:theme="@style/ToolbarTheme"/>-->


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay"
        android:background="?attr/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/ToolbarTheme">

            <include
                android:id="@+id/toolbar_new_main"
                layout="@layout/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_disable"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:background="@null"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bio_reg_form_title"
                    android:text="@string/reg_bio_title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_regular_3x"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_bio_ph"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/reg_bio_phone_label"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_bio_ph_err"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:text="@string/reg_bio_phone_err"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:id="@+id/text_reg_bio_ph"
                    android:paddingLeft="@dimen/margin_medium"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayLight"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:hint="@string/reg_bio_phone_hint"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:background="@drawable/edit_text_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_bio_pwd"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/reg_bio_pwd_label"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bio_reg_pwd_err"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:text="@string/reg_bio_pwd_err"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:id="@+id/text_reg_bio_pwd"
                    android:paddingLeft="@dimen/margin_medium"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayLight"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:hint="@string/register_password_holder"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:background="@drawable/edit_text_style"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_warning"
                    android:textColor="@color/red"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/reg_bio_warning_title"
                    android:textStyle="bold"
                    android:fontFamily="@font/pyidaungsu_bold"
                    android:textSize="@dimen/text_regular_2x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/biometric_warning_text"
                    android:textColor="@color/red"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:text="@string/reg_bio_warning_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_reg_bio"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pyidaungsu_regular"
                    android:background="@drawable/button_border"
                    android:text="@string/reg_bio_submit_btn"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_medium_2"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>