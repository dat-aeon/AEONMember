<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/service_unavailable"
        android:id="@+id/service_unavailable_hotline"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/margin_medium_3"
        android:paddingBottom="@dimen/margin_medium_3"
        android:background="@color/background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/aeon_logo_side"
            android:layout_height="@dimen/aeon_logo_side"
            android:src="@drawable/aeon_logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="1.2"
            android:padding="@dimen/margin_medium">

            <ImageView
                android:layout_width="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_tiny"
                android:paddingRight="@dimen/margin_small"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:src="@drawable/call_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_phone"
                android:textSize="@dimen/text_medium"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:layout_weight="0.4"
                android:textColor="@color/black"
                android:fontFamily="@font/pyidaungsu_regular"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_call"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/text_medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/call_now"
                android:layout_gravity="right"
                android:fontFamily="@font/pyidaungsu_bold"
                android:background="@drawable/button_border"
                android:text="@string/aboutus_all_now_button"
                android:width="@dimen/aeon_logo_side"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>