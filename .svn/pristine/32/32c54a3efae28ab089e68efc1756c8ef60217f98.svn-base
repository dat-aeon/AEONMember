<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_admin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/init_buy_received_message"
        android:gravity="center_vertical"
        android:maxWidth="250dp"
        android:minWidth="0dp"
        android:padding="@dimen/margin_medium_x"
        android:text="@string/init_buy_message"
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="dd/MM/yyyy hh:mm AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="@dimen/margin_medium_3"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_message_body"/>

</RelativeLayout>